{
  "defaultSeverity": "error",
  "extends": [
    "tslint:latest",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "rules": {
    "max-classes-per-file": false,
    "no-implicit-dependencies": [
      true,
      "optional",
      [
        "electron",
        "electron-devtools-installer"
      ]
    ],
    "no-submodule-imports": [
      true,
      "validated"
    ],
    "object-literal-sort-keys": false,
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case",
      "allow-leading-underscore"
    ]
  }
}
